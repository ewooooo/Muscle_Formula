<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack"
    tools:context=".MainActivity"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarTheme">

        <TextView
            android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Formula"
            android:textColor="@color/pointColorText"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <Spinner
        android:id="@+id/sp_select"
        android:background="@drawable/style_sp_select"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/sp_connect"
        android:background="@drawable/style_sp_select"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="140dp"
        android:layout_gravity="center"
        android:fontFamily="@style/BoldTextTheme"
        android:text="지난 기록 보기"/>






</LinearLayout>

